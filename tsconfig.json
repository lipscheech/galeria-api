{
	"$schema": "https://www.schemastore.org/tsconfig",
	"_version": "22.0.0",
	"compilerOptions": {
		"lib": [
			"es2024",
			"ESNext.Array",
			"ESNext.Collection",
			"ESNext.Iterator"
		],
		"module": "nodenext",
		"target": "es2022",
		"declaration": false,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"paths": {
			"@/*": ["./src/*"]
		},
		"rewriteRelativeImportExtensions": true,
		"allowImportingTsExtensions": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts"],
	"exclude": ["node_modules", "dist"]
}
